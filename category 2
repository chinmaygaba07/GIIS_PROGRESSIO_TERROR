while c2=="x"or "X"or"y"or"Y":
    if c2 == "x":
        points = points+change
        print("Your current points : " + str(points))
        break
    if c2 == "X":
        points = points+change
        print("Your current points : " + str(points))    
        break
    elif c2 == "Y":
        points = points+bad
        print("Your current points : " + str(points))
        break
    elif c2 == "y":
        points = points+bad
        print("Your current points : " + str(points)) 
        break
    else :
        print("please enter valid letter")
        break

print("")
